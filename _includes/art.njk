---
layout : layouts/base.njk
---
<!-- Main content -->
<main class="main wrapper">
    <section class="page-art main-section-one anim_items no_anim">
        <div class="page-art--content content-wrap">
            <div class="page-title">
                <img class="title-element anim_items" src="/icon/art_g.svg" alt="Element">
                <img class="i-title" src="/icon/art-progects.svg" alt="Art progect">
            </div>
            <div class="go-to-btn">
                <a class="mouse" href="#section_2" title="Go to Section Two"></a>
            </div>
        </div>
    </section>

    <!-- Section Two ---------------------------------->
    <section id="section_2" class="section-works">
        <div class="section-works--content flex jb">

            {% for post in postslist %}
            <div class="sw-item preload-img anim_items no_anim">
                <picture>
                    <source srcset="{{ post.featuredImageSmall | url }}" media="(max-width: 768px)">
                    <source srcset="{{ post.featuredImageWebp | url }}">
                    <img class="b-lazy" data-src="{{ post.featuredImage | url }}" alt="{{ post.title }}">
                </picture>
                <div class="sw-item--title">{{ post.title }}</div>
                <div class="sw-item--hover">
                    <a class="sw-item--play popap_open" href="#preview_{{ post.title }}" title="Open Video">
                        <svg class="i-play">
                            <use xlink:href="/icon/sprite.svg#play"/>
                        </svg>
                        Quick play
                    </a>
                </div>
            </div>
            <div id="preview_{{ post.title }}" class="win-wrap popup">
                <div class="popup--content popup_content">
                    <svg class="popap_close win-close i-close">
                        <use xlink:href="/icon/sprite.svg#close"/>
                    </svg>
                    <div class="popup--video">
                        <iframe title="vimeo-player" src="{{ post.video }}" width="100%" height="100%" frameborder="0" allowfullscreen></iframe>
                    </div>
                    <div class="popup--title">{{ post.title }}</div>
                    <div class="popup--text">{{ post.description | safe }}</div>
                </div>
            </div>
            {% endfor %}
        </div>
    </section>
</main>
<!-- Footer -->