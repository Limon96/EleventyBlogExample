<!-- Section Works ---------------------------------->
<section id="section_2" class="section-works">
    <div class="section-works--content flex jb">
        {% for post in postslist %}
        <div class="sw-item preload-img anim_items no_anim">
            <picture>
                <source srcset="{{ post.data.featuredImageSmall | url }}" media="(max-width: 768px)">
                <source srcset="{{ post.data.featuredImageWebp | url }}">
                <img class="b-lazy" data-src="{{ post.data.featuredImage | url }}" alt="{{ post.data.title }}">
            </picture>
            <div class="sw-item--title">{{ post.data.title }}</div>
            <div class="sw-item--hover">
                <a class="sw-item--play popap_open" href="#preview_{{ post.fileSlug }}" title="Open Video">
                    <svg class="i-play">
                        <use xlink:href="/icon/sprite.svg#play"/>
                    </svg>
                    Quick play
                </a>
            </div>
        </div>
        <div id="preview_{{ post.fileSlug }}" class="win-wrap popup">
            <div class="popup--content popup_content">
                <svg class="popap_close win-close i-close">
                    <use xlink:href="/icon/sprite.svg#close"/>
                </svg>
                <div class="popup--video">
                    <iframe title="vimeo-player" src="{{ post.data.video }}" width="100%" height="100%" frameborder="0" allowfullscreen></iframe>
                </div>
                <div class="popup--title">{{ post.data.title }}</div>
                <div class="popup--text">{{ post.data.description }}</div>
            </div>
        </div>
        {% endfor %}
    </div>
</section>